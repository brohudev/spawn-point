---
import Layout from '../layouts/Layout.astro';
import CommandGenerator from '../components/CommandGenerator.astro';
---

<Layout title="Quickly Scaffold Your Projects">
  <section class="py-12 md:py-20">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-4xl md:text-6xl font-bold mb-6">
        <span class="text-rosePine-pine">spawn</span><span class="text-rosePine-rose">point</span>
      </h1>
      <p class="text-xl md:text-2xl text-rosePine-subtle mb-8">
        A modern scaffold tool for developers who value speed and simplicity
      </p>
      
      <div class="flex justify-center space-x-4 mb-12">
        <a href="/docs" class="bg-rosePine-pine hover:bg-rosePine-iris text-rosePine-text px-6 py-3 rounded-md font-medium transition-colors">
          Get Started
        </a>
        <a href="https://github.com/username/spawnpoint" target="_blank" class="bg-rosePine-overlay hover:bg-rosePine-highlightMed text-rosePine-text px-6 py-3 rounded-md font-medium transition-colors">
          View on GitHub
        </a>
      </div>
    </div>
    
    <div class="max-w-3xl mx-auto mt-12">
      <CommandGenerator />
    </div>
  </section>
  
  <section class="py-12 md:py-20">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-2xl md:text-3xl font-bold mb-8 text-center">Why Spawnpoint?</h2>
      
      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-rosePine-surface p-6 rounded-lg">
          <h3 class="text-xl font-bold mb-3 text-rosePine-foam">Lightning Fast</h3>
          <p class="text-rosePine-subtle">Get your projects up and running in seconds, not minutes.</p>
        </div>
        
        <div class="bg-rosePine-surface p-6 rounded-lg">
          <h3 class="text-xl font-bold mb-3 text-rosePine-gold">Fully Customizable</h3>
          <p class="text-rosePine-subtle">Create and share your own templates or use community favorites.</p>
        </div>
        
        <div class="bg-rosePine-surface p-6 rounded-lg">
          <h3 class="text-xl font-bold mb-3 text-rosePine-love">Developer Focused</h3>
          <p class="text-rosePine-subtle">Built by developers, for developers, with DX as the primary goal.</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
